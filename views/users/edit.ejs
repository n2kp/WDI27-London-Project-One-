<h1 class="title is-1">Edit User Profile</h1>

<div class="container">
  <div class="col">
    <div class="box">

      <form method="POST" action="/users/<%= user.id %>">

        <div class="field">
          <label for="name" class="label">Username</label>
          <p class="control has-icons-left">
            <input class="input is-medium" type="text" name="username" value="<%= user.username %>">
            <span class="icon is-small is-left">
              <i class="fa fa-user" aria-hidden="true"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <label for="email" class="label">Email</label>
          <p class="control has-icons-left">
            <input class="input is-medium" type="text" name="email" value="<%= user.email %>">
            <span class="icon is-small is-left">
              <i class="fa fa-envelope" aria-hidden="true"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <label for="password" class="label">Password</label>
          <p class="control has-icons-left">
            <input class="input is-medium" type="password">
            <span class="icon is-small is-left">
              <i class="fa fa-lock" aria-hidden="true"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <label for="confirmPassword" class="label"> Confirm Password</label>
          <p class="control has-icons-left">
            <input class="input is-medium" type="password">
            <span class="icon is-small is-left">
              <i class="fa fa-lock" aria-hidden="true"></i>
            </span>
          </p>
        </div>

        <button class="button is-info">Update</button>

      </form>


    </div>
  </div>
</div>
