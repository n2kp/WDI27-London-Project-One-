<h1>New</h1>


<div class="container">
  <form method="POST" action="/stars/:id" enctype="multipart/form-data">

    <div class="field">
      <label class="label">Name</label>
      <p class="control">
        <input class="input" type="text" placeholder="Text input">
      </p>
    </div>

    <div class="field">
    <label class="label" for="image">Image</label>
    <label class="button is-primary" for="image">Choose file</label>
    <input type="file" name="image" id="image" hidden>
  </div>

    <div class="field">
      <label class="label">Type</label>
      <p class="control">
        <span class="select">
          <select>
            <option>Stars</option>
            <option>Planets</option>
            <option>Galaxies</option>
            <option>Nebula</option>
            <option>Comets/Astroids</option>
            <option>Night Sky</option>
          </select>
        </span>
      </p>
    </div>

    <div class="field">
      <label class="label">Date</label>
      <p class="control">
        <input class="input" type="date">
      </p>
    </div>

    <div class="field">
      <label class="label">Description</label>
      <p class="control">
        <textarea class="textarea"></textarea>
      </p>
    </div>


    <div class="newMap">

    </div>

    <button class="button">Post</button>


  </form>






</div>
