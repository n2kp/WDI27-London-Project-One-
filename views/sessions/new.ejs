<h1 class="title is-1">Log In</h1>

<div class="container">
  <div class="col">
    <div class="box">

      <form method="POST" action="/login">

        <div class="field">
          <label class="label" for="email">Email</label>
          <p class="control has-icons-left">
            <input class="input is-medium" type="email" name="email" id="email" required>
            <span class="icon is-small is-left">
              <i class="fa fa-envelope" aria-hidden="true"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <label class="label" for="password">Password</label>
          <p class="control has-icons-left">
            <input class="input is-medium" type="password" name="password" id="password">
            <span class="icon is-small is-left">
              <i class="fa fa-lock" aria-hidden="true"></i>
            </span>
          </p>
        </div>

        <button class="button is-info is-medium">Login</button>
        <a href="/" class="button is-warning is-medium">Cancel</a>

      </form>
      <br>
      <a class="button is-primary is-medium" href="<%= oauth.instagram.getLoginUrl() %>">
        <span class="icon">
          <i class="fa fa-instagram" aria-hidden="true"></i>
        </span>
        <span>Login With Instagram</span>
      </a>

    </div>
  </div>
</div>
